/* Lógico_1: */

CREATE TABLE usuario (
    id INTEGER PRIMARY KEY,
    nome VARCHAR,
    email VARCHAR,
    cpf INTEGER,
    dt_nasc DATE,
    senha VARCHAR,
    telefone INTEGER,
    endereco VARCHAR
);

CREATE TABLE aula (
    id INTEGER PRIMARY KEY,
    hr_aula TIME,
    vl_aula FLOAT,
    dt_aula DATE,
    nome_disciplina VARCHAR,
    categoria VARCHAR,
    descricao VARCHAR,
    tipo_aula VARCHAR,
    plataforma VARCHAR
);

CREATE TABLE professor (
    fk_usuario_id INTEGER,
    fk_aula_id INTEGER,
    matricula_professor INTEGER
);

CREATE TABLE aluno (
    fk_usuario_id INTEGER,
    fk_aula_id INTEGER,
    matricula_aluno INTEGER
);
 
ALTER TABLE professor ADD CONSTRAINT FK_professor_1
    FOREIGN KEY (fk_usuario_id)
    REFERENCES usuario (id)
    ON DELETE SET NULL;
 
ALTER TABLE professor ADD CONSTRAINT FK_professor_2
    FOREIGN KEY (fk_aula_id)
    REFERENCES aula (id)
    ON DELETE SET NULL;
 
ALTER TABLE aluno ADD CONSTRAINT FK_aluno_1
    FOREIGN KEY (fk_usuario_id)
    REFERENCES usuario (id)
    ON DELETE SET NULL;
 
ALTER TABLE aluno ADD CONSTRAINT FK_aluno_2
    FOREIGN KEY (fk_aula_id)
    REFERENCES aula (id)
    ON DELETE SET NULL;